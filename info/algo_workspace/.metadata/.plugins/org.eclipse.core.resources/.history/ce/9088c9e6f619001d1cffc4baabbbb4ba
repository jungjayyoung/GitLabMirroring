package boj;

import java.io.*;
import java.util.*;

public class p15686 {
	
	static int n, m;
	static int board[][];
	static List<int[]> a = new ArrayList<int[]>(); // 치킨집의 좌표들 저장
	static List<int[]> selected = new ArrayList<int[]>();
	static int ans = 1000000000;
	
	
	
	
	static void bt(int cnt,int start,List<int[]> result) {
		
		
		// m개의 치킨집을 고른다.
		if(cnt == m) {
			int sum = 0;
			
			for(int y = 0; y < n; y++) {
				for(int x = 0; x <n; x++) {
					int tmp = 1000000000;
					if(board[y][x] == 1){
						
						for(int i = 0; i <result.size(); i++) {
							int c_x = result.get(i)[0];
							int c_y = result.get(i)[1];
							System.out.println("c_x: "  + c_x + " c_y " + c_y);
							int distance = Math.abs(x - c_x) + Math.abs(y - c_y);
							
							tmp = Math.min(tmp, distance);
						
						}
						
						sum += tmp;
						
					}
					
				}
			}
			System.out.println("sum: " + sum);
			
			ans = Math.min(ans, sum);
			
			
			
			return;
		}
		
		
		for(int i=start; i< a.size();i++) {
			
			List<int[]> tmp = result;
			int x = a.get(i)[0];
			int y = a.get(i)[1];
			
			tmp.add(new int[] {x,y});
			bt(cnt +1, i + 1,tmp);
			
			
			
		}
		
		
		
	}

	public static void main(String[] args) throws IOException{

		BufferedReader br = new BufferedReader(new InputStreamReader(System.in));
		StringTokenizer st;
		
		st = new StringTokenizer(br.readLine()," ");
		n = Integer.parseInt(st.nextToken());
		m = Integer.parseInt(st.nextToken());
		board = new int[n+1][n+1];
		
		for(int y =0; y < n; y++) {
			st = new StringTokenizer(br.readLine()," ");
			for(int x = 0; x <n; x++) {
				board[y][x] = Integer.parseInt(st.nextToken());
				if(board[y][x] == 2) {
					a.add(new int[] {x,y});
				}
			}
			
		}
		
		bt(0,0,selected);
		
		System.out.println(ans);
		
	}

}
