import java.io.*;
import java.util.*;

public class q31 {
	
	static int [][]mine;
	static int n,m;
	static int dp[];
	

	public static void main(String[] args) throws IOException{

		BufferedReader br = new BufferedReader(new InputStreamReader(System.in));
		StringTokenizer st;
		
		int tt = Integer.parseInt(br.readLine());
		
		for(int t = 1; t <= tt; t++) {
			st = new StringTokenizer(br.readLine()," ");
			
			n = Integer.parseInt(st.nextToken());
			m = Integer.parseInt(st.nextToken());
			
			mine = new int[n+1][m+1];
			dp = new int[3];
			st = new StringTokenizer(br.readLine()," ");
			for(int y = 0; y < n; y++) {
				
				for(int x = 0; x < m; x++) {
					mine[y][x] = Integer.parseInt(st.nextToken());
				}
			}
			
			dp[0] = mine[0][0];
			dp[1] = mine[1][0];
			dp[2] = mine[2][0];
			
			for(int x = 1; x < m; x++) {
				
				dp[0] += Math.max(Math.max(mine[0][x], mine[1][x]), mine[2][x]);
				dp[1] += Math.max(Math.max(mine[0][x], mine[1][x]), mine[2][x]);
				dp[2] += Math.max(Math.max(mine[0][x], mine[1][x]), mine[2][x]);
				
				
			}
			
			System.out.println(Math.max(Math.max(dp[0], dp[1]), dp[2]));
		}
	
		
	}

}
